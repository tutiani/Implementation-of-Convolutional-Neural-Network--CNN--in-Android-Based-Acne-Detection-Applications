<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_green"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="About App"
            android:textColor="@color/Grey"
            android:textSize="20dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


        <ImageView
            android:id="@+id/ImgAbout"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:src="@drawable/logo_app" />

        <TextView
            android:id="@+id/textAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImgAbout"
            android:text="@string/app"
            android:justificationMode="inter_word"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textAbout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAbout"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:paddingLeft="10dp"
            android:text="Objek yang dapat dideteksi yaitu:"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textAbout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textAbout2"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Acne_level0"/>
         <TextView
            android:id="@+id/textAbout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_below="@+id/textAbout3"
            android:text="Acne_level1" />
         <TextView
            android:id="@+id/textAbout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textAbout4"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Acne_level2"/>
        <TextView
            android:id="@+id/textAbout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textAbout5"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Papules"/>
        <TextView
            android:id="@+id/textAbout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textAbout6"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Pustules"/>
        <TextView
            android:id="@+id/textAbout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textAbout7"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Nodules" />
         <TextView
            android:id="@+id/textAbout9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textAbout8"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Cysts"/>

    <TextView
        android:id="@+id/textAbout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAbout9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="221dp"
        android:textSize="12dp"
        android:text="\u00a9 2022 Tutiani - All Reserved Right"
        android:textAppearance="?android:attr/textAppearance" />
</RelativeLayout>
</ScrollView>

